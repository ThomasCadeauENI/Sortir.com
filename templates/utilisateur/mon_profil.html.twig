{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
<div class="">
    <div class="row">
        <div class="col-2">
            <img style="border: 4px solid black; overflow: auto" src="/images/default_profil.png">
        </div>
        <div class="col-8" style="overflow: auto">
            <div class="text-center"><h2>Mon profil</h2></div>
            <div class="col-md-6 offset-md-3 ">
                <div class="row mb-2">
                    <div class="col">Mon pseudo : </div>
                    <div class="col"><input type="text" id="pseudo" value="{{ app.user.pseudo }}"></div>
                </div>
                <div class="row mb-2">
                    <div class="col">Mon pr√©nom : </div>
                    <div class="col"><input type="text" id="prenom" value="{{ app.user.prenom }}"></div>
                </div>
                <div class="row mb-2">
                    <div class="col">Mon nom : </div>
                    <div class="col"><input type="text" id="nom" value="{{ app.user.nom }}"></div>
                </div>
                <div class="row mb-2">
                    <div class="col">Mon tel : </div>
                    {% if app.user.numTel != null %}
                        <div class="col"><input type="text" id="tel" value="{{ app.user.numTel }}"></div>
                    {% else %}
                    <div class="col"><input type="text" id="tel"></div>
                    {% endif %}
                </div>
                <div class="row mb-2">
                    <div class="col">Mon email : </div>
                    <div class="col"><input type="email" id="email" value="{{ app.user.email }}"></div>
                </div>
                <div class="row mb-2">
                    <div class="col">Mot de passe : </div>
                    <div class="col"><input type="password" id="mdp1"></div>
                </div>
                <div class="row mb-2">
                    <div class="col">Confirmation : </div>
                    <div class="col"><input type="password" id="mdp2"></div>
                </div>
                <div class="row mb-2">
                    <div class="col">Ville de rattachement : </div>
                    <select class="col form-control" name="ville" id="ville">
                        <option value="{{ app.user.idVille.nom }}"></option>
                        {% for ville in villes %}
                            <option value="{{ ville.id }}">{{ ville.nom }}</option>
                        {% endfor %}</select>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 offset-md-3 row">
        <div class="col text-center"><button class="btn btn-primary btn-lg btn-success">Enregistrer</button></div>
        <div class="col text-center"><button class="btn btn-primary btn-lg btn-danger">Annuler</button></div>
    </div>
</div>
{% endblock %}