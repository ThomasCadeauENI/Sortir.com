{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="col-md-6 offset-md-3 row">

        <form method="post" class="col">
            {% if error %}
                <div class="col s12 m6 l6 offset-m3 offset-l3">
                    <span class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="col s12 m6 l6 offset-m3 offset-l3">
                    Tu es actuellement connect&#xE9; en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">D&#xE9;connecte-toi</a>
                </div>
            {% endif %}
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="col">
                <div class="col">
                    <div class="row mb-3">
                        <div class="col-6">
                        <label for="inputEmail">Identifiant :</label>
                        </div>
                        <div class="col-6">
                            <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Adresse email">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label>Mot de passe : </label>
                        </div>
                        <div class="col-6">
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row mb-3">
                    <div class="col-6">
                        <div class="input-field col s12 ">
                            <input style="width: 100%" type="submit" class="btn btn-lg btn-primary" value="Me connecter">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi </label>
                        </div>
                        <a href="{{ path('forgot_password') }}">Mot de passe oubli√© ?</a>

                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
