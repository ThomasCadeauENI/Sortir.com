{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="text-center mb-5"><h2>Annuler une sortie</h2></div>
        <div class="row col mb-5">
            <div class="col-md-6 offset-md-3 ">
                <div class="col mb-2">
                    <div class="row">
                        <div class="col-6">Nom de la sortie : </div>
                        <div class="col-6">{{ sortie.nom }}</div>
                    </div>
                </div>
                <div class="col mb-2">
                    <div class="row">
                        <div class="col-6">Date de la sortie : </div>
                        <div class="col-6">{{ sortie.DateSortie|date("d-m-Y H:i") }}</div>
                    </div>
                </div>
                <div class="col mb-2">
                    <div class="row">
                        <div class="col-6">Ville organisatrice : </div>
                        <div class="col-6">{{ sortie.idVille.nom }}</div>
                    </div>
                </div>
                <div class="col mb-2">
                    <div class="row">
                        <div class="col-6">Lieu : </div>
                        <div class="col-6">{{ sortie.idLieu.nom }}</div>
                    </div>
                </div>
                {{ form_start(form) }}
                <div class="col mb-2">
                    <div class="row">
                        <div class="col-6">Motif : </div>
                        <div class="col-6">{{ form_widget(form.motif) }}</div>
                    </div>
                </div>
                <div class="input-field col s12 m12 l12">
                    <input type="submit" name="" value="Enregistrer" class="btn btn-primary">
                </div>
                <div class="d-none">
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
